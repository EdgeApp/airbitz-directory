#!/bin/bash

cwd=$(pwd)
file=${1:-latest.dump}

if [ -e $file ]; then
    echo "Installing latest.dump"
    sudo su - postgres <<EOF
dropdb <%=@db%>
createdb --locale=en_US.utf8 -E UTF8 -T template0 <%=@db%>
pg_restore --disable-triggers -F c -d <%=@db%> $cwd/$file
psql -d <%=@db%> -c "grant all privileges on database airbitz to <%=@user%>";
EOF

else
    echo "No database to install. Skipping..."
fi
